{% extends 'layout.twig' %}
{% import '/macro/iptw_macro.twig' as main_macro %}
{% set title = 'tariffs' %}

{% set list = '<li><a href="#" data-filter="0"><span>Все</span></a></li>' %}

{% block content %}
{#    <div class="row header_title">
        <div class="col-xs-10 col-sm-2">
            <h3>Тарифные планы</h3>
        </div>
    </div>#}
    <div id="iptv_list">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a href="{{app.request.baseUrl}}/{{app.controller_alias}}/add-tariff-plans" class="btn btn-success pull-right">Добавить</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box">
                    {% if attribute(app, 'dropdownAttribute') is defined %}
                    {{ main_macro.get_dropdown_attribute(app['dropdownAttribute']) }}
                    {% endif %}
                    <div class="box-content">
                        <div class="box-content no-padding">
                            <div class="row">
                                <div class="">
                                    <table class="table  table-hover table-datatable" id="datatable-1">
                                        <thead>
                                            <tr>                                       
                                                <th data-filter="external_id">Внешний ID</th>
                                                <th data-filter="name">Тариф</th>
                                                <th data-filter="users_count">Пользователи</th>
                                                <th data-filter="operations"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% if attribute(app, 'allTariffsPlans') is defined %}
                                                <!-- Start: list_row -->
                                                {% for item in app.allTariffsPlans %}
                                                    <tr data-radioid="{{ item.id }}">
                                                        <td>{{ item.external_id }}</td>
                                                        <td><a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-tariff-plan?id={{ item.id }}" >{{ item.name }}</a>{% if item.user_default %}(по умолчанию){% endif %}</td>
                                                        <td>{{ item.users_count }}</td>
                                                        <td>
                                                            <div class="col-xs-3 col-sm-8">
                                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">                    
                                                                    <i class="pull-right fa fa-cog"></i>
                                                                </a>
                                                                <ul class="dropdown-menu pull-right">
                                                                    <li>
                                                                        <a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-tariff-plan?id={{ item.id }}">
                                                                            <span>Редактировать</span>
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/remove-tariff-plan" data-planid="{{ item.id }}">
                                                                            <span>Удалить</span>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            {% endif %}
                                            <!-- End: list_row -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" defer>

        function TestTable1() {
            $('#datatable-1').on('xhr.dt', function (e, settings, json) {
                if (typeof (json.data) == 'object') {
                    for (var i in json.data) {
                        var id = json.data[i].id;
                        json.data[i].operations = "<div class='col-xs-3 col-sm-8'>\n\
                                                        <a href='#' class='dropdown-toggle' data-toggle='dropdown'>\n\
                                                            <i class='pull-right fa fa-cog'></i>\n\
                                                        </a>\n\
                                                        <ul class='dropdown-menu pull-right'>\n\
                                                            <li>\n\
                                                                <a href='{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-tariff-plan?id=" + id + "'>\n\
                                                                    <span>Редактировать</span>\n\
                                                                </a>\n\
                                                            </li>\n\
                                                            <li>\n\
                                                                <a class='main_ajax' href='{{ app.request.baseUrl }}/{{ app.controller_alias }}/remove-tariff-plan' data-planid='" + id + "'>\n\
                                                                    <span>Удалить</span>\n\
                                                                </a>\n\
                                                            </li>\n\
                                                        </ul>\n\
                                                    </div>";

                        var name = json.data[i].name;

                        json.data[i].name = '<a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-tariff-plan?id=' + id + '" >' + name + '</a>';
                    }
                }
            }).dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ app.request.baseUrl }}/{{ app.controller_alias }}/tariff-plans-list-json",
                    "data": function (d) {
                        var params = $.parseParams(window.location.href.split('?')[1] || ''); //window.location.href.split('?')[1] || '' 
                        for (var i in params) {
                            d[i] = params[i];
                        }
                    }
                },
                "deferLoading": [{{ app.recordsFiltered }}, {{ app.totalRecords }} ],
                "language": {
                    "url": "./plugins/datatables/lang/ru_RU.json"
                },
                "columns": [
                    {"data": "external_id"},
                    {"data": "name"},
                    {"data": "users_count"},
                    {"data": "operations"}
                ],
                "bFilter": true,
                "bPaginate": true,
                "bInfo": true,
                "aoColumnDefs": [
                    { className: "action-menu", "targets": [ -1 ] },
                    {"searchable": false, "targets": [-1, 0, 2]},
					  { "width": "15px", "targets": [ -1] },
                    {"sortable": false, "targets": [-1, -2]}
                ]
            });
            $("#attribute_set input[type='checkbox']").each(function(index){
                $("#datatable-1").dataTable().fnSetColumnVis( index - 1, $(this).prop('checked') );
            });
        }

        function yelp() {
            $(document).ready(function () {
                $(document).on('click', "a.main_ajax", function (e) {
                    e.stopPropagation();
                    e.preventDefault();
                    var _this = $(this);
                    ajaxPostSend(_this.attr('href'), $(this).data(), false);
                    _this.closest('div.open').removeClass('open');
                    return false;
                });

                LoadDataTablesScripts(TestTable1);
            });
        }

        document.addEventListener("DOMContentLoaded", yelp, false);

        var removePlan = function (obj) {
            var cRow = $(obj).closest('tr');
            $('#datatable-1').DataTable().row(cRow).remove().draw(false);
        }
    </script>
{% endblock %}