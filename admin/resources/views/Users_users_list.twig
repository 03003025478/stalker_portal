{% extends 'layout.twig' %}
{% import '/macro/iptw_macro.twig' as main_macro %}
{% set title = 'users' %}

{% set list = '<li><a href="#" data-filter="0"><span>Все</span></a></li>' %}

{% block content %}
{#    <div class="row header_title">
        <div class="col-xs-10 col-sm-2">
            <h3>Пользователи</h3>
        </div>
    </div>#}
    <div id="iptv_list">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                {{ main_macro.get_filter('status_id', 'Статус', 'id', 'title', app['allStatus'], 6, 8) }}
                {{ main_macro.get_filter('state_id', 'Состояние', 'id', 'title', app['allState'], 6, 8) }}
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 no-padding">
                    <div class="col-xs-12 col-sm-6 filter no-padding" data-tvfilter="time_period">
                        <div class="col-xs-3 col-sm-3 filter no-padding leftbordercircle" data-tvfilter="time_period">
                            <input class="col-xs-12 col-sm-12 filter" placeholder="С" type="text" id="datepicker_from" name="interval_from" value="{{ app['filters']['interval_from'] }}">
                        </div>
                        <div class="col-xs-3 col-sm-3 filter no-padding" data-tvfilter="time_period">
                            <input class="col-xs-12 col-sm-12 filter" placeholder="По" type="text" id="datepicker_to" name="interval_to" value="{{ app['filters']['interval_to'] }}">
                        </div>
                        <span class="col-xs-6 col-sm-6 filter">
                            поиск неактивных
                        </span>
                        <br><br><br>
                    </div>
                </div>

                <a href="{{app.request.baseUrl}}/{{app.controller_alias}}/add-users" class="btn btn-success pull-right">Добавить</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    {% if attribute(app, 'dropdownAttribute') is defined %}
                    {{ main_macro.get_dropdown_attribute(app['dropdownAttribute']) }}
                    {% endif %}
                    <div class="box-content">
                        <div class="box-content no-padding">
                            <table class="table table-striped table-bordered table-hover table-datatable" id="datatable-1">
                                <thead>
                                    <tr>
                                        <th data-filter="mac">MAC</th>
                                        <th data-filter="ip">IP</th>
                                        <th data-filter="login">Логин</th>
                                        <th data-filter="ls">Лицевой счет</th>
                                        <th data-filter="fname">ФИО</th>
                                        <th data-filter="last_change_status">Последнее изменение</th>
                                        <th data-filter="state">Состояние</th>
                                        <th data-filter="status">Статус</th>
                                        <th data-filter="operations">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if attribute(app, 'allUsers') is defined %}
                                        <!-- Start: list_row -->
                                        {% for item in app.allUsers %}
                                            <tr data-userid="{{ item.id }}">
                                                <td><a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-users?id={{ item.id }}" >{{ item.mac }}</a></td>
                                                <td>{{ item.ip }}</td>
                                                <td>{{ item.login }}</td>
                                                <td>{{ item.ls }}</td>
                                                <td>{{ item.fname }}</td>
                                                <td>{{ item.last_change_status|date('M d, Y H:i') }}</td>
                                                <td>{% if item.state %}
                                                    <span class="txt-success">Online</span>
                                                    {% else %}
                                                    <span class="txt-danger">Offline</span>
                                                    <br><span>Последняя активность: {% if item.last_active == 0 %}{{ item.last_active|date('M d, Y H:i') }}{% else %} - {% endif %}</span>
                                                    {% endif %}</td>
                                                <td class="data-filter-status">{% if item.status %}<span class="txt-success">Вкл</span>{% else %}<span class="txt-danger">Выкл</span>{% endif %}</td>
                                                <td>
                                                    <div class="col-xs-3 col-sm-8">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">                    
                                                            <i class="pull-right fa fa-cog"></i>
                                                        </a>
                                                        <ul class="dropdown-menu pull-right">
                                                            <li>
                                                                <a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/edit-users?id={{ item.id }}">
                                                                    <span>Редактировать</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/users-consoles-logs?id={{ item.id }}">
                                                                    <span>Логи пользователя</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/send-message" data-userid="{{ item.id }}">
                                                                    <span>Отправить сообщение</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/toggle-user" data-userid="{{ item.id }}" data-userstatus="{{ item.status }}">
                                                                    <span>{% if item.status %}Отключить{% else %}Включить{% endif %}</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="main_ajax" href="{{ app.request.baseUrl }}/{{ app.controller_alias }}/remove-user" data-userid="{{ item.id }}">
                                                                    <span>Удалить</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    <!-- End: list_row -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modalbox_ad">
