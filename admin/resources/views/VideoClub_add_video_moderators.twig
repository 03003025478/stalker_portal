{% extends 'layout.twig' %}
{% set title = 'video-club' %}

{% block content %}

{#    <div class="row header_title">
        <div class="col-xs-10 col-sm-2">
            <h3>{% if app['modEdit'] %}Редактировать{% else %}Добавить{% endif %} модератора</h3>
        </div>
    </div>#}
    <div id="add_channel">
        {{ form_start(app['form'], {'method': 'POST', 'action': (app.request.baseUrl ~ '/' ~ app.controller_alias  ~ '/' ~ app.action_alias) | trans, 'attr': {'class': 'form-horizontal', 'role': 'form', 'id': 'form_'}}) }}
        <div class="bg-danger">
            <div class="bg-danger">
                {{ form_errors(app['form']) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box">
                    <div class="box-content">
                        <div class="form-group">
                            <label class="col-sm-2 control-label ">Имя</label>
                            <div class="col-xs-10 col-sm-6">
                                <div class=" col-xs-10 col-sm-6">
                                    {{ form_widget(app['form'].id, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_widget(app['form'].name, {'attr': {'class': 'form-control'}}) }}
                                    <div class="bg-danger">
                                        {{ form_errors(app['form'].name) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label ">MAC Адресс</label>
                            <div class="col-xs-10 col-sm-6">
                                <div class=" col-xs-10 col-sm-6">
                                    {{ form_widget(app['form'].mac, {'attr': {'class': 'form-control'}}) }}
                                    <div class="bg-danger">
                                        {{ form_errors(app['form'].mac) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label ">Отключить рекламу</label>
                            <div class=" col-xs-10 col-sm-7">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(app['form'].disable_vclub_ad) }}      
                                        <i class="fa fa-square-o small"></i>
                                    </label>
                                    <div class="bg-danger">
                                        {{ form_errors(app['form'].disable_vclub_ad) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-content">
                        <div class="row">
                            <div class="col-xs-10 col-sm-4 pull-right">
                                {{ form_widget(app['form'].save, { 'label': 'Сохранить' , attr: {'class': 'btn btn-success col-sm-5 pull-right'}}) }}
                                <a href="{{app.request.baseUrl}}/{{app.controller_alias}}/video-moderators-addresses" class="btn btn-default col-sm-5 pull-left">Отмена</a>
{#                                {{ form_widget(app['form'].reset, { 'label': 'Отмена' , attr: {'class': 'btn btn-default col-sm-5 pull-left'}}) }}#}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="">
            {{ form_rest(app.form) }}
        </div>
        {{ form_end(app['form']) }}  
    </div>
    <script type="text/javascript" defer>
        function yelp() {
            $(document).ready(function () {
                $(document).on('change keyup', '#form_mac', function (e) {
                    var _this = $(this);
                    _this.next('div').removeClass('bg-danger').css('visibility', 'hidden').html('&nbsp;');

                    if ($.trim(_this.val()) == '') {
                        return;
                    }

                    $.ajax({
                        url: 'video-club/check-moderator-mac',
                        type: 'POST',
                        data: {mac: _this.val()},
                        success: function (data) {
                            if (data.success) {
                                _this.next('div').append('<i class="txt-success fa fa-check"></i> ' + data.chk_rezult).css('visibility', 'visible');
                            } else if (data.error) {
                                alert(data.error);
                            } else {
                                alert('Some server error');
                            }
                        },
                        error: function (data) {
                            if (typeof (data.responseJSON) != 'undefined' && typeof (data.responseJSON.error) != 'undefined') {
                                _this.next('div').append('<i class="txt-danger fa fa-ban"></i> ' + data.responseJSON.error).css('visibility', 'visible');
                            } else {
                                alert('Some network error or access denied');
                            }
                        },
                        dataType: "json",
                        async: false
                    });
                });
            });
        }
        document.addEventListener("DOMContentLoaded", yelp, false);
    </script>
{% endblock %}