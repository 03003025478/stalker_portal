{% extends 'layout.twig' %}
{% set title = 'events' %}

{% set list = '<li><a href="#" data-filter="0"><span>Все</span></a></li>' %}

{% block content %}
    <div class="row header_title">
        <div class="col-xs-10 col-sm-12">
            <h3>События{% if attribute(app, 'currentUser') is defined %} пользователя "{{ app.currentUser.name }}"({{ app.currentUser.mac }}) {% endif %}</h3>
        </div>
    </div>
    <div id="iptv_list">
        <div class="row">
            <div class="col-xs-8 col-sm-12">
                <div class="col-xs-3 col-sm-7 no-padding">
                    <div class="col-xs-3 col-sm-3 filter no-padding" data-tvfilter="event">
                        <span class="col-xs-4 col-sm-4 no-padding">Статус:</span>
                        {% if attribute(app, 'filters') is defined and attribute(app['filters'], 'event') is defined %}
                            {% set f_event = app['filters']['event'] %}
                        {% else %}
                            {% set f_event = '0' %}
                        {% endif %}
                        {% set list_f = list %}    
                        {% for key, item in app.allEvent %}
                            {% set list_f = (list_f ~ '<li><a href="#" data-filter="' ~ key ~ '"><span>' ~ item ~ '</span></a></li>') | trans %}
                            {% if f_event == key %}                       
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">                    
                                    <span>{{ item }}</span>
                                    <i class="fa fa-chevron-down"></i>
                                </a>
                            {% endif %}
                        {% endfor %}
                        {% autoescape false %}
                            {% if f_event == '0' %}
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">                    
                                    <span>Все</span>
                                    <i class="fa fa-chevron-down"></i>
                                </a>
                            {% endif %}
                            <ul class="dropdown-menu pull-right">
                                {{ list_f }}
                            </ul>
                        {% endautoescape %}
                    </div>
                    {#<div class="col-xs-3 col-sm-6 filter no-padding" data-tvfilter="time_period">
                        <div class="col-xs-3 col-sm-3 filter no-padding leftbordercircle" data-tvfilter="time_period">
                            <input class="col-xs-3 col-sm-12 filter" placeholder="С" type="text" id="datepicker_from" name="interval_from" value="{{ app['filters']['interval_from'] }}">
                        </div>
                        <div class="col-xs-3 col-sm-3 filter no-padding" data-tvfilter="time_period">
                            <input class="col-xs-3 col-sm-12 filter" placeholder="По" type="text" id="datepicker_to" name="interval_to" value="{{ app['filters']['interval_to'] }}">
                        </div>
                        <span class="col-xs-3 col-sm-6 filter">
                            поиск неактивных
                        </span>
                    </div>#}
                </div>
                <div class="col-xs-3 col-sm-1 filter no-padding pull-right">
                    <a id="add_events" href="#" class="btn btn-success pull-right">Добавить</a>
                </div>
                {% if attribute(app, 'currentUser') is defined %}
                <div class="col-xs-3 col-sm-1 filter no-padding pull-right">
                    <a id="clean_events" href="#" class="btn btn-danger pull-right" data-uid="{{ app.currentUser.uid }}">Очистить</a>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-content">
                        <div class="box-content no-padding">
                            <table class="table table-striped table-bordered table-hover table-datatable" id="datatable-1">
                                <thead>
                                    <tr>
                                        <th data-filter="events_id">#</th>
                                        <th data-filter="addtime">Добавлено</th>
                                        <th data-filter="eventtime">Действительно до</th>
                                        <th data-filter="mac">MAC</th>
                                        <th data-filter="event">Событие</th>
                                        <th data-filter="msg">Сообщение</th>
                                        <th data-filter="sended">Статус</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if attribute(app, 'eventList') is defined %}
                                        <!-- Start: list_row -->
                                        {% for item in app.eventList %}
                                            <tr>
                                                <td>{{ item.events_id }}</td>
                                                <td>{{ item.addtime }}</td>
                                                <td>{{ item.eventtime }}</td>
                                                <td><a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}?uid={{ item.uid }}" >{{ item.mac }}</a></td>
                                                <td>{{ item.event }}</td>
                                                <td><div class="event_message">{{ item.msg }}</div></td>
                                                <td>{% if item.sended != '0' %}<span class="txt-success">Отправлено</span>{% else %}<span class="txt-warning">Не отправлено</span>{% endif %}</td>
                                            </tr>
                                        {% endfor %}
                                        <!-- End: list_row -->
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modalbox_ad">
        <div class="devoops-modal">
            <div class="devoops-modal-header">
                <div class="modal-header-name">
                    <span>Новое событие</span>
                </div>
                <div class="box-icons">
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="devoops-modal-inner">
                <div class="box">
                    <div class="box-content">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-3 control-label col-sm-offset-1">Адресат</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-6">
                                        <select class="populate placeholder" name="user_list_type" id="s2_user_list_type">
                                            <option value="to_all">Все</option>
                                            <option value="by_user_list">Список</option>
                                            <option value="by_group">Группа</option>
                                            <option value="by_pattern">По шаблону</option>
                                            <option value="to_single">Один</option>
                                        </select>
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Выбор адресата. Пример: одному, всем, по списку, по шаблону, группе</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" data-list-type="by_user_list">
                                <label class="col-sm-3 control-label col-sm-offset-1">Список MAC-адресов</label>
                                <div class="col-xs-10 col-sm-8">
                                    <input type="hidden" name="file_name" id="file_name">
                                    <div class=" col-xs-10 col-sm-3" id="bootstrapped-fine-uploader"></div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Файл должен содержать составленный заранее список MAC-адресов, в тасширении txt или другом текстовом формате</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" data-list-type="by_group">
                                <label class="col-sm-3 control-label col-sm-offset-1">Группа</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-6">
                                        <select class="populate placeholder" name="group_id" id="s2_group_id">
                                            {% for item in app.consoleGroup %}
                                                <option value="{{ item.id }}">{{ item.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Выберите группу пользователей которым будет отправлено сообщение</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" data-list-type="by_pattern">
                                <label class="col-sm-3 control-label col-sm-offset-1">Шаблон</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-6">
                                        <select class="populate placeholder" name="pattern" id="s2_pattern">
                                            <option value="MAG100">MAG100</option>
                                            <option value="MAG200">MAG200</option>
                                            <option value="MAG250">MAG250</option>
                                            <option value="MAG255">MAG255</option>
                                            <option value="MAG270">MAG270</option>
                                            <option value="MAG275">MAG275</option>
                                            <option value="AuraHD0">AuraHD0</option>
                                            <option value="AuraHD1">AuraHD1</option>
                                            <option value="AuraHD9">AuraHD9</option>
                                        </select>
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Выберите шаблон для типа приставки</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" data-list-type="to_single">
                                <label class="col-sm-3 control-label col-sm-offset-1">MAC-адрес</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-8">
                                        <input class="form-control" type="text" title="" value="{% if attribute(app, 'currentUser') is defined %}{{ app.currentUser.mac }}{% endif %}" name="mac">
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Введите MAC-адрес пользователя</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label col-sm-offset-1">Действия</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-6">
                                        <select class="populate placeholder" name="event" id="s2_event">
                                            <option value=""></option>
                                            <option value="send_msg">send_msg</option>
                                            <option value="reboot">reboot</option>
                                            <option value="reload_portal">reload_portal</option>
                                            <option value="update_channels">update_channels</option>
                                            <option value="play_channel">play_channel</option>
                                            <option value="mount_all_storages">mount_all_storages</option>
                                            <option value="cut_off">switch_off</option>
                                            <option value="update_image">update_image</option>
                                        </select>
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Выберите одно из предложеных действий</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" data-event-type="play_channel">
                                <label class="col-sm-3 control-label col-sm-offset-1">Канал</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-8">
                                        <input class="form-control" type="text" title="" value="" name="channel">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" data-event-type="send_msg">
                                <label class="col-sm-3 control-label col-sm-offset-1">Перезапуск</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-8">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="1" name="need_reboot">
                                                <i class="fa fa-square-o small"></i>
                                            </label>
                                        </div>
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Выполнить перезапуск приставки по нажатию кнопки "ОК"</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label col-sm-offset-1">TTL</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-8">
                                        <input class="form-control" type="text" title="" value="" name="ttl">
                                    </div>
                                    <span class="help-inline col-xs-12 col-sm-12">
                                        <span class="small txt-default">Срок актуальности действия, измеряется в секундах</span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group"  data-event-type="send_msg">
                                <label class="col-sm-3 control-label col-sm-offset-1">MSG</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-12">
                                        <textarea class="form-control" rows="4" title="" value="" name="msg" id="msg_textarea"></textarea>
                                    </div>
                                </div>
                            </div> 
                            <div class="form-group"  data-event-type="send_msg">
                                <label class="col-sm-3 control-label col-sm-offset-1">Шаблоны сообщения</label>
                                <div class="col-xs-10 col-sm-8">
                                    <div class=" col-xs-10 col-sm-8">
                                        <a href="#" id="msg_pattern">Истек срок тестирования</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="devoops-modal-bottom">
                <div class="box">
                    <div class="box-content">
                        <div class="row">
                            <div class="col-xs-10 col-sm-6 pull-right">
                                <button type="submit" class="btn btn-success col-sm-5 pull-right">Сохранить</button>
                                <button type="reset" class="btn btn-default col-sm-5 pull-left" >Отмена</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" defer>

        function DemoSelect2() {
            $("[id^='s2_']").select2({minimumResultsForSearch: -1});
        }

        function TestTable1() {
            $.getScript('plugins/datatables/fnReloadAjax.js');            
            $('#datatable-1').on('xhr.dt', function (e, settings, json) {
                if (typeof (json.data) == 'object') {
                    for (var i in json.data) {
                        var uid = json.data[i].uid;
                        var mac = json.data[i].mac;
                        json.data[i].mac = '<a href="{{ app.request.baseUrl }}/{{ app.controller_alias }}?uid=' + uid + '" >' + mac + '</a>';
                        json.data[i].msg = '<div class="event_message">' + json.data[i].msg + '</div>';
                        json.data[i].sended = json.data[i].sended != '0' ? '<span class="txt-success">Отправлено</span>' : '<span class="txt-warning">Не отправлено</span>';
                    }
                }
            }).dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ app.request.baseUrl }}/{{ app.controller_alias }}/events-list-json",
                    "data": function (d) {
                        var RegExp = /video_id=(\d+)/;
                        if (video_id = RegExp.exec(window.location.href)) {
                            d.video_id = video_id[1];
                        }
                        var params = $.parseParams(window.location.href.split('?')[1] || ''); //window.location.href.split('?')[1] || '' 
                        for (var i in params) {
                            d[i] = params[i];
                        }

                        $('input[id^="filter_"]').each(function () {
                            d['filters[' + $(this).attr("id").replace("filter_", "") + ']'] = $(this).val();
                        });
                    }
                },
                "deferLoading": [{{ app.recordsFiltered }}, {{ app.totalRecords }}],
                "language": {
                    "url": "./plugins/datatables/lang/ru_RU.json"
                },
                "columns": [
                    {"data": "events_id"},
                    {"data": "addtime"},
                    {"data": "eventtime"},
                    {"data": "mac"},
                    {"data": "event"},
                    {"data": "msg"},
                    {"data": "sended"}
                ],
                "bFilter": true,
                "bPaginate": true,
                "bInfo": true,
                "aoColumnDefs": [
                    {"searchable": false, "targets": [0, -1]},
                    {"width": '20%', "targets": [-2]}
                ]
            });
            $('#datatable-1').DataTable().order( [ 0, 'desc' ] ).draw();
        }

        function yelp() {
            $(document).ready(function () {
                LoadDataTablesScripts(TestTable1);
                LoadSelect2Script(DemoSelect2);

                var uploader = $("#bootstrapped-fine-uploader").fineUploader({
                    element: $('#bootstrapped-fine-uploader'),
                    autoUpload: true,
                    debug: true,
                    multiple: false,
                    text: {
                        formatProgress: "{percent}% из {total_size}",
                        failUpload: "Сбой при загрузке",
                        waitingForResponse: "Обработка...",
                        paused: "Пауза"
                    },
                    request: {
                        endpoint: '{{ app.request.baseUrl }}/{{ app.controller_alias }}/upload-list-addresses'
                    },
                    {#validation: {
                        allowedExtensions: ['jpeg', 'jpg', 'gif', 'png'],
                        sizeLimit: 1048576 // 1Mb
                    },#}
                    template: 'qq-template-bootstrap',
                    classes: {
                        success: 'alert alert-success',
                        fail: 'alert alert-error'
                    }

                }).on('complete', function (event, id, name, response) {
                    if (response.success) {
                        $('#file_name').val(response.fname);
                        if ($.isFunction(window[response.action]) && !response.error) {
                            window[response.action](response);
                        }
                    } else if (response.error) {
                        alert(response.error);
                    } else {
                        alert('Some server error');
                    }
                        return false;
                    });
                    $("#bootstrapped-fine-uploader").on('click', ".qq-upload-cancel", function (e) {
                        e.stopPropagation();
                        e.preventDefault();
        {#$.ajax({
            url: 'tv-channels/delete-logo',
            data: {id: '{{ app.oneChannel.id }}'},
            success: function(data){
                if (data.success) {
                    $(this).prev('div').children('img').attr('src', '');
                    $(this).prev('div').children('input').val('');
                } else {
                    console.log(data.error);
                }
            },
            error: function(){
                alert('Ошибка');
            }
        });#}
                        return false;
                    });

                    $("[data-list-type], [data-event-type]").hide().find('input, select, textarea').attr('disabled', 'disabled');
                    $(document).on('change', "#s2_user_list_type, #s2_event", function (e) {
                        checkFields($(this), e);
                    });

                    $(document).on('click', "#msg_pattern", function (e) {
                        e.stopPropagation();
                        e.preventDefault();
                        $('#msg_textarea').text($.trim($('#msg_textarea_pattern').text()));
                        return false;
                    });

                    $(document).on('click', '#add_events', function (e) {
                        e.stopPropagation();
                        e.preventDefault();
                        $("#modalbox_ad").show().find('input, select, textarea').removeAttr('disabled');
                        checkFields('#s2_user_list_type', e);
                        checkFields('#s2_event', e);
                        return false;
                    });

                    $(document).on('click', "#modalbox_ad button[type='submit']", function (e) {
                        e.stopPropagation();
                        e.preventDefault();
                        var formData = $("#modalbox_ad form").serialize();
                        ajaxPostSend("{{app.request.baseUrl}}/{{app.controller_alias}}/add-event", formData);
                        return false;
                    });
                    $(document).on('click', "#clean_events", function (e) {
                        e.stopPropagation();
                        e.preventDefault();
                        ajaxPostSend("{{app.request.baseUrl}}/{{app.controller_alias}}/clean_events", {uid: $(this).data('uid')});
                        return false;
                    });
                    
                });
            }
            document.addEventListener("DOMContentLoaded", yelp, false);

            function checkFields(obj, e) {
                var dataName = $(obj).attr('id') == 's2_user_list_type' ? 'data-list-type' : 'data-event-type';
                $("[" + dataName + "]").hide().find('input, select, textarea').attr('disabled', 'disabled');
                $(obj).find('option').each(function () {
                    if (this.selected) {
                        $('[' + dataName + '="' + $(this).val() + '"]').show().find('input, select, textarea').removeAttr('disabled');
                    }
                });
                return false;
            }
            
            var addEvent = function(data){
                alert(data.msg);
                $('#datatable-1').dataTable().fnReloadAjax();
                $('#modalbox_ad').click();
            }
            var addEventError = function(data){
                alert(data.msg);
                $('#datatable-1').dataTable().fnReloadAjax();
                $('#modalbox_ad').click();
            }
            var addAddressList = function(data){
                alert(data.msg);
            }
            var addAddressListError = function(data){
                alert(data.error);
            }
            var cleanEvents = function(data){
                alert(data.msg);
                $('#datatable-1').dataTable().fnReloadAjax();
            }
            var cleanEventsError = function(data){
                alert(data.error);
                $('#datatable-1').dataTable().fnReloadAjax();
            }
    </script>

